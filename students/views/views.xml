    <record model="ir.ui.view" id="students.list">
      <field name="name">students list</field>
      <field name="model">students.students</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="age"/>
          <field name="gender"/>
          <field name="mobile"/>
          <field name="email"/>
          <field name="blood_group"/>
        </tree>
      </field>
    </record>
    

    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="students.action_window">
      <field name="name">Students window</field>
      <field name="res_model">students.students</field>
      <field name="view_mode">kanban,tree,form</field>
    </record>
    

    <record model="ir.ui.view" id="students_kanban_view" >
      <field name="name">students.kanban.view</field>
      <field name="model">students.students</field>
      <field name="arch" type="xml">
        <kanban> 
          <templates>
            <t t-name="kanban-box">
              <div class="oe_kanban_global_click container">
                <field name="photo" widget="image" class="oe_left oe_avatar" />
                <field name="name"/>
              </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>




    <record model="ir.ui.view" id="student_form_view">
      <field name="name">students</field>
      <field name="model">students.students</field>
      <field name="arch" type="xml">

        <form string='Students'>
          <header>
            <button name="button_done" string="Done" status="draft" class="oe_highlight" type="object"/>
            <button name="button_reset" string="Reset to Draft" status="done,cancel" class="oe_highlight" type="object"/>
            <button name="button_cancel" string="Cancel" status="draft,done" type="object"/>
            <field name="status" widget="statusbar" statusbar_visible="draft,done"/>
          </header>
          <sheet>
            <field name="photo" widget="image" class="oe_left oe_avatar" />
                 <div class="oe_title">
                  <h3>
                    <field name="name"/>
                    <field name="student_type" placeholder="e.g-Regular"/>
                  </h3>
                 </div>
            <notebook position="inside">
              <page string ="Students Details">
                 
                 <group>
                  <group>
                    <field name="age"/>
                    <field name="mobile" widget="phone"/>
                    <field name="email"/>
                    <field name="gender" widget="radio"/>
                    
                  </group>
                  <group>
                    <field name="hide" invisible="1"/>
                    <!-- <field name="hello" invisible="1"/> -->
                    <field name="student_dob"/>
                    <field name="blood_group"/>
                    <field name="country_id" />
                    <field name="state_id" placeholder='select state' options="{'no_create': True, 'no_open' : True }"  attrs="{'invisible':[('hide', '=', True)], 'required': [('hide', '=', False)]}" /> 
                    <field name="state" placeholder = "Enter new state" attrs="{'invisible':[('hide', '=', False)]}"/>

                    <field name="city_id"/>
                  </group>
                 </group>
               </page>
               <page string ="Student Education Details">
                <div class="oe_title">
                  <h3>
                    Here You can create a from for Students Education Details
                  </h3>
                </div>
               </page>
               <page string ="Student Personal Details">
                <div class="oe_title">
                  <h3>
                    Here You can create a from for Students Personal Details
                  </h3>
                </div>
               </page>
             </notebook>
          </sheet>
            <div class="oe_title">
            <h3>
              History and Comments
            </h3>
          </div>

          <field name="photo" widget="image" class="oe_left oe_avatar" />
        </form>
      </field>
    </record>

    
    






